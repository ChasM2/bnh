@model IBrickViewModel<TabsBrick>

@{
    this.GetScriptBundle().Include(new[]
    {
        "~/Areas/Cms/Scripts/edit-tabs-content.js"
    });
    var tabs = (Model == null || Model.Content.Tabs == null) ? new string[] { } : Model.Content.Tabs;
}


    <label>@Html.LabelFor(model => model.Content.TabName)</label>
    @Html.EditorFor(model => model.Content.TabName)

    @foreach (var tab in tabs)
    {
        <div>
            <input name="tabs" style="width: 700px;" type="text" readonly="true" value="@tab" /><input class="button-remove btn" type="button" value="Remove" />
        </div>
    }
    <div id="new-tabs"></div>
    
    <input id="button-add" class="btn" type="button" value="Add" />
