@model SearchViewModel

@{
    ViewBag.Title = "Search";
}


<div class="row">
    <div class="span6">
        <form class="form-search">
            <input type="text" name="query" placeholder="Search Criteria" class="input-medium search-query" value="@Model.Query" />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
    <div class="span6">
        @Html.ActionLink("Rebuild Index", "RebuildIndex")
    </div>
</div>

<div class="row padding">
    <div class="span12">
        @foreach(var entry in Model.Result)
        {
            <div>
                on @Html.Raw(entry.Category) @Html.Raw(entry.Link) found:
                <div class="well well-small">
                    ...@Html.Raw(entry.Description)...
                </div>
            </div>
        }
    </div>
</div>