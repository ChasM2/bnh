@using Bnh.Core.Entities.Attributes

@{
    var properties = FilterProperty.Get(typeof(Community));
}

<div class="community-filter" data-bind="with: filter">
    @foreach (var jsp in properties)
    {
        if (jsp.Property.PropertyType == typeof(bool))
        {
            <label class="checkbox">
                <input id="@jsp.Name" type="checkbox" class="filter" data-bind="checked: properties.@jsp.Name" /> @jsp.Title
            </label>
        }
        else
        {
            <label>@jsp.Title</label>
            <input id="@jsp.Name+'_input'" type="text" class="filter" data-bind="value: properties.@jsp.Name" />
        }
    }
</div>